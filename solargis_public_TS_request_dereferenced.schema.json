{
  "$id": "https://raw.githubusercontent.com/solargis/schemas/v1.0.7/solargis_public_TS_request.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "description": "Schema for Solargis data request - for timeseries datasets.",
  "type": "object",
  "required": [
    "site",
    "timeStep",
    "fromDate",
    "toDate",
    "columns",
    "outputFormat"
  ],
  "additionalProperties": true,
  "properties": {
    "site": {
      "description": "Site location point, a place on Earth.",
      "type": "object",
      "additionalProperties": true,
      "required": [
        "latitude",
        "longitude"
      ],
      "properties": {
        "latitude": {
          "description": "Geographic coordinate in degrees that specifies the north–south position of a point on the Earth's surface. Positive latitudes are north of the equator (0), and negative ones are south.",
          "type": "number",
          "minimum": -90,
          "maximum": 90
        },
        "longitude": {
          "description": "Geographic coordinate in degrees that specifies the east–west position of a point on the Earth's surface. Positive longitudes are east of the prime meridian (0), and negative ones are west.",
          "type": "number",
          "minimum": -180,
          "maximum": 180
        },
        "elevation": {
          "description": "Elevation of the site on Earth above (or below) mean sea level in meters.",
          "type": "number",
          "minimum": -500,
          "maximum": 9000
        },
        "name": {
          "description": "Any name of the site e.g., postal address.",
          "type": "string",
          "maxLength": 100
        },
        "countryName": {
          "description": "Country name.",
          "type": "string",
          "maxLength": 100
        },
        "countryISOCode": {
          "description": "ISO 3166-1 alpha-2 two-letter country codes, see https://en.wikipedia.org/wiki/ISO_3166-1_alpha-2.",
          "type": "string",
          "minLength": 2,
          "maxLength": 2
        },
        "mapUrl": {
          "description": "Map URL where the location can be explored e.g., Google Maps or Solargis Prospect.",
          "type": "string",
          "format": "uri"
        },
        "description": {
          "description": "Description of the site.",
          "type": "string",
          "maxLength": 500
        },
        "horizon": {
          "description": "An outline (modeled as a set of points) of land and other objects defined against the sky - a skyline.",
          "type": "object",
          "required": [
            "azimuth",
            "height"
          ],
          "additionalProperties": false,
          "properties": {
            "azimuth": {
              "description": "Geographical azimuth of the point in degrees. From the 0 degree (North) advancing clockwise.",
              "type": "array",
              "items": {
                "type": [
                  "number"
                ],
                "minimum": 0,
                "maximum": 360
              }
            },
            "height": {
              "description": "Angular height of the point in degrees. From the 0 degree up to 90 degrees.",
              "type": "array",
              "items": {
                "type": [
                  "number"
                ],
                "minimum": 0,
                "maximum": 90
              }
            }
          },
          "examples": [
            [
              {
                "azimuth": [
                  0,
                  360
                ],
                "height": [
                  19.0581,
                  31.2
                ]
              }
            ]
          ]
        },
        "id": {
          "description": "Solargis internal or any custom id. Can be used as identifier for referencing another site specific properties.",
          "type": "string",
          "maxLength": 100
        }
      },
      "examples": [
        {
          "latitude": 43.913961,
          "longitude": 142.419596,
          "elevation": 179,
          "name": "Pippu 比布町, Kamikawa District",
          "countryName": "Japan",
          "countryISOCode": "JP",
          "mapUrl": "https://apps.solargis.com/prospect/map?s=43.913961,142.419596&c=43.914237,142.420094,12&m=mapbox-satellite&l=true",
          "description": "Geog. coordinates should have at least 6 decimal places."
        }
      ]
    },
    "timeStep": {
      "enum": [
        "PT15M",
        "PT30M",
        "PT60M",
        "P1D",
        "P1M",
        "P1Y"
      ]
    },
    "fromDate": {
      "description": "Start date of the requested data. Inclusive. See also the utcOffset.",
      "oneOf": [
        {
          "type": "string",
          "format": "date"
        },
        {
          "enum": [
            "AUTODETECT",
            "AUTODETECT-P1D"
          ]
        }
      ]
    },
    "toDate": {
      "description": "End date of the requested data. Inclusive. See also the utcOffset.",
      "oneOf": [
        {
          "type": "string",
          "format": "date"
        },
        {
          "const": "LAST_MONTH"
        },
        {
          "const": "LAST_YEAR"
        }
      ]
    },
    "columns": {
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "items": {
        "description": "Solargis recognizes these column names in the request.",
        "anyOf": [
          {
            "description": "Contains only ASCII letters, numbers and underscores, and it must not start with a number.",
            "type": "string",
            "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
          },
          {
            "description": "Column types from the solar data domain. Including also tilted solar irradiation types.",
            "$comment": "Do not confuse column types with column names, but prefer using type names for column names if applicable (when creating datasets).",
            "enum": [
              "ALB",
              "DHI",
              "DIF",
              "DNI",
              "GHI",
              "GTI",
              "KC",
              "KT",
              "KTM",
              "LEADTIME",
              "PAR",
              "SH",
              "SUN_AZIMUTH",
              "SUN_ELEVATION",
              "UVA",
              "UVB"
            ]
          },
          {
            "description": "Column types from the meteorological data domain.",
            "enum": [
              "AP",
              "PREC",
              "PWAT",
              "RH",
              "SDENS",
              "SDWE",
              "SFWE",
              "TD",
              "TEMP",
              "TSD",
              "WBT",
              "WD",
              "WG",
              "WS"
            ]
          },
          {
            "description": "Column types from the various energy systems - photovoltaic or wind turbines.",
            "enum": [
              "PVOUT",
              "TMOD",
              "WOUT",
              "PANEL_AZIMUTH",
              "PANEL_INC",
              "PANEL_TILT"
            ]
          },
          {
            "description": "In addition to the most of the column type names, Solargis also recognizes the following column names in the request.",
            "enum": [
              "CI_FLAG",
              "DIF_NOSHD",
              "DNI_C",
              "DNI_NOSHD",
              "GHI_C",
              "GHI_NOSHD",
              "GHI_UNC_HIGH",
              "GHI_UNC_LOW",
              "GTI_C",
              "GTI_CIRC",
              "GTI_CIRC_NOSHD",
              "GTI_DIR",
              "GTI_DIR_NOSHD",
              "GTI_EFF",
              "GTI_EFF_NOSHD",
              "GTI_ISO_HOR",
              "GTI_ISO_HOR_NOSHD",
              "GTI_NOSHD",
              "GTI_REFL",
              "GTI_REFL_NOSHD",
              "GTI_UNC_HIGH",
              "GTI_UNC_LOW",
              "PVOUT_UNC_HIGH",
              "PVOUT_UNC_LOW",
              "SNOW_FLAG",
              "PM10",
              "PM2P5"
            ]
          },
          {
            "description": "Solargis recognizes the names of several uncertainty scenarios for selected column types.",
            "pattern": "^(GHI|GTI|PVOUT)_UNC_P(1|5|10|20|25|75|80|90|95|99)$"
          },
          {
            "description": "Solargis recognizes a pattern for two wind column names. Wind speed and wind direction can be recorded at the predefined height range above the ground (from 50 to 200 meters).",
            "pattern": "^(WS|WD)(5[0-9]|[6-9][0-9]|1[0-9]{2}|200)$"
          }
        ]
      }
    },
    "utcOffset": {
      "description": "ISO 8601 time zone designator (offset from UTC) formatted as ±hh:mm. Will not allow offsets beyond ±14:59. If this property is missing Solargis will calculate the offset for the given site: round(longitude/15).",
      "type": "string",
      "pattern": "^([+\\-])(0[0-9]|1[0-4]):[0-5][0-9]$"
    },
    "timeAlignment": {
      "description": "Datetime strings (labels of time intervals) can represent start, center or end of the time interval (or the left edge, the center and the right edge of the time interval).",
      "enum": [
        "CENTER",
        "START",
        "END"
      ],
      "default": "CENTER"
    },
    "terrainShading": {
      "description": "This attribute affects all related parameters (e.g., GHI, DIF, DNI, GTI, PVOUT, TMOD except parameters with explicit _NOSHD suffix.)",
      "type": "boolean",
      "default": false
    },
    "environment": {
      "description": "Environmental characteristics of the site location.",
      "type": "object",
      "properties": {
        "surfaceAlbedo": {
          "oneOf": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            {
              "type": "array",
              "items": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
              },
              "minItems": 12,
              "maxItems": 12
            }
          ]
        },
        "horizon": {
          "description": "An outline (modeled as a set of points) of land and other objects defined against the sky - a skyline.",
          "type": "object",
          "required": [
            "azimuth",
            "height"
          ],
          "additionalProperties": false,
          "properties": {
            "azimuth": {
              "description": "Geographical azimuth of the point in degrees. From the 0 degree (North) advancing clockwise.",
              "type": "array",
              "items": {
                "type": [
                  "number"
                ],
                "minimum": 0,
                "maximum": 360
              }
            },
            "height": {
              "description": "Angular height of the point in degrees. From the 0 degree up to 90 degrees.",
              "type": "array",
              "items": {
                "type": [
                  "number"
                ],
                "minimum": 0,
                "maximum": 90
              }
            }
          },
          "examples": [
            [
              {
                "azimuth": [
                  0,
                  360
                ],
                "height": [
                  19.0581,
                  31.2
                ]
              }
            ]
          ]
        }
      }
    },
    "gtiConfiguration": {
      "type": "object",
      "properties": {
        "layout": {
          "type": "object",
          "properties": {
            "azimuth": {
              "type": "number",
              "minimum": 0,
              "maximum": 360
            },
            "relativeSpacing": {
              "type": "number",
              "minimum": 0.1
            },
            "mounting": {
              "oneOf": [
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": [
                        "FIXED_ONE_ANGLE"
                      ]
                    },
                    "tilt": {
                      "type": "number",
                      "minimum": 0,
                      "maximum": 90
                    }
                  },
                  "required": [
                    "type",
                    "tilt"
                  ],
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": [
                        "FIXED_ONE_ANGLE_MONTHLY"
                      ]
                    },
                    "tilt": {
                      "type": "array",
                      "items": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 90
                      },
                      "minItems": 12,
                      "maxItems": 12
                    }
                  },
                  "required": [
                    "type",
                    "tilt"
                  ],
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": [
                        "FIXED_ONE_ANGLE_SEASONAL"
                      ]
                    },
                    "tilt": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "dateOfChange": {
                            "type": "string",
                            "pattern": "^\\d{2}-\\d{2}$"
                          },
                          "tilt": {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 90
                          }
                        },
                        "required": [
                          "dateOfChange",
                          "tilt"
                        ]
                      }
                    }
                  },
                  "required": [
                    "type",
                    "tilt"
                  ],
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": [
                        "TRACKER_ONE_AXIS_HORIZONTAL"
                      ]
                    },
                    "backtracking": {
                      "type": "boolean"
                    },
                    "rotationLimitEast": {
                      "type": "number",
                      "minimum": -90,
                      "maximum": 90
                    },
                    "rotationLimitWest": {
                      "type": "number",
                      "minimum": -90,
                      "maximum": 90
                    }
                  },
                  "required": [
                    "type",
                    "backtracking",
                    "rotationLimitEast",
                    "rotationLimitWest"
                  ],
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": [
                        "TRACKER_ONE_AXIS_INCLINED"
                      ]
                    },
                    "axisTilt": {
                      "type": "number",
                      "minimum": 0,
                      "maximum": 90
                    },
                    "backtracking": {
                      "type": "boolean"
                    },
                    "rotationLimitEast": {
                      "type": "number",
                      "minimum": -90,
                      "maximum": 90
                    },
                    "rotationLimitWest": {
                      "type": "number",
                      "minimum": -90,
                      "maximum": 90
                    }
                  },
                  "required": [
                    "axisTilt",
                    "type",
                    "backtracking",
                    "rotationLimitEast",
                    "rotationLimitWest"
                  ],
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": [
                        "TRACKER_ONE_AXIS_VERTICAL"
                      ]
                    },
                    "tilt": {
                      "type": "number",
                      "minimum": 0,
                      "maximum": 90
                    },
                    "azimuthLimitEast": {
                      "type": "number",
                      "minimum": -180,
                      "maximum": 180
                    },
                    "azimuthLimitWest": {
                      "type": "number",
                      "minimum": -180,
                      "maximum": 180
                    }
                  },
                  "required": [
                    "type",
                    "tilt",
                    "azimuthLimitEast",
                    "azimuthLimitWest"
                  ],
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": [
                        "TRACKER_TWO_AXIS"
                      ]
                    },
                    "tiltLimitMin": {
                      "type": "number",
                      "minimum": 0,
                      "maximum": 90
                    },
                    "tiltLimitMax": {
                      "type": "number",
                      "minimum": 0,
                      "maximum": 90
                    },
                    "azimuthLimitEast": {
                      "type": "number",
                      "minimum": -180,
                      "maximum": 180
                    },
                    "azimuthLimitWest": {
                      "type": "number",
                      "minimum": -180,
                      "maximum": 180
                    },
                    "backtracking": {
                      "type": "boolean"
                    }
                  },
                  "required": [
                    "type",
                    "tiltLimitMin",
                    "tiltLimitMax",
                    "azimuthLimitEast",
                    "azimuthLimitWest",
                    "backtracking"
                  ],
                  "additionalProperties": false
                }
              ]
            }
          },
          "required": [
            "mounting"
          ],
          "additionalProperties": false
        },
        "environment": {
          "type": "object",
          "properties": {
            "surfaceAlbedo": {
              "oneOf": [
                {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                {
                  "type": "array",
                  "items": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                  },
                  "minItems": 12,
                  "maxItems": 12
                }
              ]
            },
            "horizon": {
              "description": "An outline (modeled as a set of points) of land and other objects defined against the sky - a skyline.",
              "type": "object",
              "required": [
                "azimuth",
                "height"
              ],
              "additionalProperties": false,
              "properties": {
                "azimuth": {
                  "description": "Geographical azimuth of the point in degrees. From the 0 degree (North) advancing clockwise.",
                  "type": "array",
                  "items": {
                    "type": [
                      "number"
                    ],
                    "minimum": 0,
                    "maximum": 360
                  }
                },
                "height": {
                  "description": "Angular height of the point in degrees. From the 0 degree up to 90 degrees.",
                  "type": "array",
                  "items": {
                    "type": [
                      "number"
                    ],
                    "minimum": 0,
                    "maximum": 90
                  }
                }
              },
              "examples": [
                [
                  {
                    "azimuth": [
                      0,
                      360
                    ],
                    "height": [
                      19.0581,
                      31.2
                    ]
                  }
                ]
              ]
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "fileLabel": {
      "description": "Contains only ASCII letters, numbers and underscores, and it must not start with a number.",
      "type": "string",
      "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
    },
    "outputFormat": {
      "enum": [
        "SOLARGIS_JSON",
        "SOLARGIS_JSON_HIGH_PREC_FLOAT"
      ]
    },
    "compressOutput": {
      "description": "Output dataset will be zipped.",
      "type": "boolean",
      "default": false
    },
    "stochasticGenerator": {
      "description": "For 1, 5 and 10 minute time steps, the solar irradiation values can be synthetically generated from 15 minute data.",
      "type": "boolean",
      "default": false
    }
  }
}