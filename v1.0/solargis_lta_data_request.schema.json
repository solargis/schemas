{
  "$id": "https://raw.githubusercontent.com/solargis/schemas/main/v1.0/solargis_lta_data_request.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "description": "Schema for Solargis data request - for long-term average (LTA) datasets. See other requests for timeseries or TMY",
  "allOf": [
    {
      "$ref": "solargis_data_request.schema.json"
    }
  ],
  "required": [
    "requestType",
    "site",
    "timeStep",
    "columns"
  ],
  "properties": {
    "requestType": {
      "const": "LONG_TERM_AVERAGE"
    },
    "timeStep": {
      "enum": [
        "P1M",
        "P1Y"
      ]
    },
    "outputFormats": {
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "items": {
        "enum": [
           "SOLARGIS_CSV"
        ]
      }
    },
    "fileLabel": {
      "$ref": "solargis_common_types.schema.json#/$defs/FileLabel"
    }
  }
}