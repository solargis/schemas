{
  "$id": "https://raw.githubusercontent.com/solargis/schemas/v1.0.9/solargis_gti_configuration_v2.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "description": "Base schema for a Solargis GTI system definition for simulation request - not used in public APIs.",
  "allOf": [
    {
      "$ref": "#/$defs/GtiSystem"
    }
  ],
  "$defs": {
    "DegreesHorizonAzimuth": {
      "type": "number",
      "minimum": 0,
      "maximum": 360
    },
    "DegreesHorizonHeight": {
      "type": "number",
      "minimum": 0,
      "maximum": 90
    },
    "Horizon": {
      "type": "object",
      "properties": {
        "azimuth": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/DegreesHorizonAzimuth"
          }
        },
        "height": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/DegreesHorizonHeight"
          }
        }
      },
      "required": [
        "azimuth",
        "height"
      ]
    },
    "NormalizedPercentage": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "MonthlyValuesNormalizedPercentage": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/NormalizedPercentage"
      },
      "minItems": 12,
      "maxItems": 12
    },
    "GtiEnvironment": {
      "type": "object",
      "properties": {
        "surfaceAlbedo": {
          "oneOf": [
            {
              "$ref": "#/$defs/NormalizedPercentage"
            },
            {
              "$ref": "#/$defs/MonthlyValuesNormalizedPercentage"
            }
          ]
        },
        "horizon": {
          "$ref": "solargis_common_types.schema.json#/$defs/Horizon"
        }
      },
      "additionalProperties": false
    },
    "MonthDay": {
      "type": "string",
      "pattern": "^\\d{2}-\\d{2}$"
    },
    "GtiDegreesMountingTilt": {
      "type": "number",
      "minimum": 0,
      "maximum": 90
    },
    "GtiMonthlyValuesDegreesMountingTilt": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/GtiDegreesMountingTilt"
      },
      "minItems": 12,
      "maxItems": 12
    },
    "GtiSeasonalDegreesMountingTilt": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "dateOfChange": {
            "$ref": "#/$defs/MonthDay"
          },
          "tilt": {
            "$ref": "#/$defs/GtiDegreesMountingTilt"
          }
        },
        "required": [
          "dateOfChange",
          "tilt"
        ]
      }
    },
    "GtiDegreesRotationLimitEastTrackerHorizontalInclined": {
      "type": "number",
      "minimum": -90,
      "maximum": 90
    },
    "GtiDegreesRotationLimitWestTrackerHorizontalInclined": {
      "type": "number",
      "minimum": -90,
      "maximum": 90
    },
    "GtiDegreesAzimuthLimitEastTrackerVerticalTwoAxis": {
      "type": "number",
      "minimum": -180,
      "maximum": 180
    },
    "GtiDegreesAzimuthLimitWestTrackerVerticalTwoAxis": {
      "type": "number",
      "minimum": -180,
      "maximum": 180
    },
    "GtiMountingFixedOneAngle": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "FIXED_ONE_ANGLE"
          ]
        },
        "tilt": {
          "$ref": "#/$defs/GtiDegreesMountingTilt"
        }
      },
      "required": [
        "type",
        "tilt"
      ],
      "additionalProperties": false
    },
    "GtiMountingFixedOneAngleMonthly": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "FIXED_ONE_ANGLE_MONTHLY"
          ]
        },
        "tilt": {
          "$ref": "#/$defs/GtiMonthlyValuesDegreesMountingTilt"
        }
      },
      "required": [
        "type",
        "tilt"
      ],
      "additionalProperties": false
    },
    "GtiMountingFixedOneAngleSeasonal": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "FIXED_ONE_ANGLE_SEASONAL"
          ]
        },
        "tilt": {
          "$ref": "#/$defs/GtiSeasonalDegreesMountingTilt"
        }
      },
      "required": [
        "type",
        "tilt"
      ],
      "additionalProperties": false
    },
    "GtiMountingTrackerOneAxisHorizontal": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "TRACKER_ONE_AXIS_HORIZONTAL"
          ]
        },
        "backtracking": {
          "type": "boolean"
        },
        "rotationLimitEast": {
          "$ref": "#/$defs/GtiDegreesRotationLimitEastTrackerHorizontalInclined"
        },
        "rotationLimitWest": {
          "$ref": "#/$defs/GtiDegreesRotationLimitWestTrackerHorizontalInclined"
        }
      },
      "required": [
        "type",
        "backtracking",
        "rotationLimitEast",
        "rotationLimitWest"
      ],
      "additionalProperties": false
    },
    "GtiMountingTrackerOneAxisInclined": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "TRACKER_ONE_AXIS_INCLINED"
          ]
        },
        "axisTilt": {
          "$ref": "#/$defs/GtiDegreesMountingTilt"
        },
        "backtracking": {
          "type": "boolean"
        },
        "rotationLimitEast": {
          "$ref": "#/$defs/GtiDegreesRotationLimitEastTrackerHorizontalInclined"
        },
        "rotationLimitWest": {
          "$ref": "#/$defs/GtiDegreesRotationLimitWestTrackerHorizontalInclined"
        }
      },
      "required": [
        "axisTilt",
        "type",
        "backtracking",
        "rotationLimitEast",
        "rotationLimitWest"
      ],
      "additionalProperties": false
    },
    "GtiMountingTrackerOneAxisVertical": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "TRACKER_ONE_AXIS_VERTICAL"
          ]
        },
        "tilt": {
          "$ref": "#/$defs/GtiDegreesMountingTilt"
        },
        "azimuthLimitEast": {
          "$ref": "#/$defs/GtiDegreesAzimuthLimitEastTrackerVerticalTwoAxis"
        },
        "azimuthLimitWest": {
          "$ref": "#/$defs/GtiDegreesAzimuthLimitWestTrackerVerticalTwoAxis"
        }
      },
      "required": [
        "type",
        "tilt",
        "azimuthLimitEast",
        "azimuthLimitWest"
      ],
      "additionalProperties": false
    },
    "GtiMountingTrackerTwoAxis": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "TRACKER_TWO_AXIS"
          ]
        },
        "tiltLimitMin": {
          "$ref": "#/$defs/GtiDegreesMountingTilt"
        },
        "tiltLimitMax": {
          "$ref": "#/$defs/GtiDegreesMountingTilt"
        },
        "azimuthLimitEast": {
          "$ref": "#/$defs/GtiDegreesAzimuthLimitEastTrackerVerticalTwoAxis"
        },
        "azimuthLimitWest": {
          "$ref": "#/$defs/GtiDegreesAzimuthLimitWestTrackerVerticalTwoAxis"
        },
        "backtracking": {
          "type": "boolean"
        }
      },
      "required": [
        "type",
        "tiltLimitMin",
        "tiltLimitMax",
        "azimuthLimitEast",
        "azimuthLimitWest",
        "backtracking"
      ],
      "additionalProperties": false
    },
    "GtiMounting": {
      "oneOf": [
        {
          "$ref": "#/$defs/GtiMountingFixedOneAngle"
        },
        {
          "$ref": "#/$defs/GtiMountingFixedOneAngleMonthly"
        },
        {
          "$ref": "#/$defs/GtiMountingFixedOneAngleSeasonal"
        },
        {
          "$ref": "#/$defs/GtiMountingTrackerOneAxisHorizontal"
        },
        {
          "$ref": "#/$defs/GtiMountingTrackerOneAxisInclined"
        },
        {
          "$ref": "#/$defs/GtiMountingTrackerOneAxisVertical"
        },
        {
          "$ref": "#/$defs/GtiMountingTrackerTwoAxis"
        }
      ]
    },
    "GtiSystemLayout": {
      "type": "object",
      "properties": {
        "azimuth": {
          "type": "number",
          "minimum": 0,
          "maximum": 360
        },
        "relativeSpacing": {
          "type": "number",
          "minimum": 0.1
        },
        "mounting": {
          "$ref": "#/$defs/GtiMounting"
        }
      },
      "required": [
        "mounting"
      ],
      "additionalProperties": false
    },
    "GtiSystem": {
      "type": "object",
      "properties": {
        "layout": {
          "$ref": "#/$defs/GtiSystemLayout"
        },
        "environment": {
          "$ref": "#/$defs/GtiEnvironment"
        }
      },
      "additionalProperties": false
    }
  }
}
